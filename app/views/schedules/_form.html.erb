<%= form_with(model: schedule) do |form| %>
  <% if schedule.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
        <% schedule.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :day, style: "display: block" %>
    <%= form.select :day, Schedule.days.map { |key, value| [key.humanize, key] } %>
  </div>

  <div>
    <%= form.label :hourI, style: "display: block" %>
    <%= form.time_field :hourI %>
  </div>

  <div>
    <%= form.label :hourF, style: "display: block" %>
    <%= form.time_field :hourF %>
  </div>

  <div>
    <%= form.label :branch_id, style: "display: block" %>
    <%= collection_select(:schedule, :branch_id, Branch.all, :id, :name, { prompt: true }) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
