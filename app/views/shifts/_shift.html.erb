<div id="<%= dom_id shift %>">
  <% if @current_user&.staff? %>
    <p>
      <strong>Client:</strong>
      <%= User.find(shift.client_id).name%></td>
    </p>
  <% end %>

  <p>
    <strong>Date:</strong>
    <%= shift.date.strftime("%d-%m-%Y") %>
  </p>

  <p>
    <strong>Time:</strong>
    <%= shift.time.strftime("%H:%M") %>
  </p>

  <p>
    <strong>Reason:</strong>
    <%= shift.reason %>
  </p>

  <p>
    <strong>State:</strong>
    <%= shift.state %>
  </p>

  <p>
    <strong>Branch:</strong>
    <%= Branch.find(shift.branch_id).name %>
  </p>
</div>
