<h1>Users</h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
            <% if @current_user&.admin? || (@current_user&.staff? && user.role.name == 'Client') %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= link_to 'Show', user %></td>
                </tr>
            <% end %>
        <% end %>
    </tbody>
</table><br>

<% if can? :create, User %>
<%= link_to "New user", new_user_path %>
<% end %>